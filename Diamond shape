number = int(input("Enter a number: "))
i = 1
spaces = number-1
while(i<=number):
    print(" " * spaces, end = " ")
    print("* " * i)
    i += 1
    spaces -= 1
j=1
number -= 1
spaces = spaces + 2
while(number>=j):
    print(" " * spaces, end = " ")
    print("* " * number)
    number -= 1
    spaces += 1
